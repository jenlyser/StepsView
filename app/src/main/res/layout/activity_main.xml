<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <wking.views.steps.StepsView
            android:id="@+id/steps1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>

        <wking.views.steps.StepsView
            android:id="@+id/steps2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>

        <wking.views.steps.StepsView
            android:id="@+id/steps3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>

        <wking.views.steps.StepsView
            android:id="@+id/steps4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>

        <wking.views.steps.StepsView
            android:id="@+id/steps5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>

        <wking.views.steps.StepsView
            android:id="@+id/steps6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>

        <wking.views.steps.StepsView
            android:id="@+id/steps7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"></wking.views.steps.StepsView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>